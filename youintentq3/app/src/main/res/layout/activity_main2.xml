<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_weight="5">

        <TextView
            android:id="@+id/tvtopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your information"
            android:textSize="45sp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/tvOrganization"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Oraganization Name"
            android:textColor="@color/white"
            android:layout_below="@+id/tvtopic"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/EtOrganization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrganization"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TextView
            android:id="@+id/tvCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginStart="60dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/igPerson"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="20sp"
            android:src="@drawable/ic_baseline_person_24"
            android:contentDescription="TODO" />
        <EditText
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/tvCustomer"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:layout_below="@+id/line1"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginStart="60dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/igMobile"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/igPerson"
            android:layout_marginTop="20sp"
            android:src="@drawable/ic_baseline_call_24"/>
        <EditText
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMobile"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID"
            android:layout_below="@+id/line2"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginStart="60dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/igEmail"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/igMobile"
            android:layout_marginTop="22sp"
            android:src="@drawable/ic_baseline_email_24"/>

        <EditText
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail"
            android:textColor="@color/black"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_below="@+id/line3"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginStart="60dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/igAddress"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/igEmail"
            android:layout_marginTop="27sp"
            android:src="@drawable/ic_baseline_location_on_24"/>
        <EditText
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/tvAddress"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/tvManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manufacturer"
            android:layout_below="@+id/line4"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginStart="60dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/igManufacturer"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/igAddress"
            android:layout_marginTop="28sp"
            android:src="@drawable/ic_baseline_apartment_24"/>
        <EditText
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/tvManufacturer"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/tvTaxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax Id"
            android:layout_below="@+id/line5"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginStart="60dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/igTaxId"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/igManufacturer"
            android:layout_marginTop="24sp"
            android:src="@drawable/ic_baseline_account_balance_wallet_24"/>
        <EditText
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/tvTaxId"
            android:inputType="number"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/tvCompanyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company ID"
            android:layout_below="@+id/line6"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginStart="60dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/igCompanyId"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/igTaxId"
            android:layout_marginTop="27dp"
            android:src="@drawable/ic_baseline_domain_verification_24"/>
        <EditText
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCompanyId"
            android:inputType="number"
            android:textColor="@color/black"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>


    </RelativeLayout>

</LinearLayout>